{
    "Serilog": {
        "MinimumLevel": "Information",
        "Override": {
            "System" : "Warning",
            "Microsoft": "Information"
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp: dd-MM-yyyy HH:mm:ss.fff zzz} {Level:u3}] {Message:lj}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "Path": "Logs/MedicineAppLogs.txt",
                    "rollingInterval": "Day",
                    "outputTemplate": "[{Timestamp: dd-MM-yyyy HH:mm:ss.fff zzz} {Level:u3}] {Message:lj}{NewLine}{Exception}"
                }
            }

        ]
    }
}